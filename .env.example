# Server Configuration
PORT=8080
GIN_MODE=debug

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/taskdb?sslmode=disable
POSTGRES_DB=taskdb
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Feature Flags - Decorator Layers
CACHE_ENABLED=true
CACHE_TTL=5m
AUDIT_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
VALIDATION_ENABLED=true
ENCRYPTION_ENABLED=false

# Security Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION_HOURS=24

# Authentication Strategy
AUTH_METHOD=jwt
# Supported values: jwt, basic, oauth

# Task Priority Algorithm
TASK_PRIORITY_ALGORITHM=simple
# Supported values: simple, eisenhower, kanban, weighted

# Notification Channels
NOTIFICATION_CHANNELS=email,push
# Supported values: email, push, sms, slack, webhook

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
AUDIT_LOG_LEVEL=info

# External Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_CLIENT_ID=your-client-id

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack (for Slack notifications)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Development/Testing
TEST_DATABASE_URL=postgres://user:password@localhost:5432/taskdb_test?sslmode=disable
ENABLE_PROFILING=false
ENABLE_METRICS=true
METRICS_PORT=9090

# Migration Configuration
MIGRATION_DIR=./migrations
AUTO_MIGRATE=false